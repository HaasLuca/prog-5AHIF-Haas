<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:_2025_09_19_Pocket_Calculator.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="_2025_09_19_Pocket_Calculator.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="_2025_09_19_Pocket_Calculator">
    
    <Grid Margin="32" ColumnDefinitions="*,*,*,*" RowDefinitions="Auto,*,*,*,*">
        <!-- Display -->
        <Border Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0" BorderBrush="Gray" BorderThickness="3" CornerRadius="12" Margin="0,0,0,16">
            <ScrollViewer Name="DisplayScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <TextBlock Text="{Binding Result}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="48" FontWeight="Bold" Margin="16"/>
            </ScrollViewer>
        </Border>
        <!-- Row 1 -->
        <Button Grid.Column="0" Grid.Row="1" Command="{Binding AddToDisplayCommand}" CommandParameter="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">7</Button>
        <Button Grid.Column="1" Grid.Row="1" Command="{Binding AddToDisplayCommand}" CommandParameter="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">8</Button>
        <Button Grid.Column="2" Grid.Row="1" Command="{Binding AddToDisplayCommand}" CommandParameter="9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">9</Button>
        <Button Grid.Column="3" Grid.Row="1" Command="{Binding AddToDisplayCommand}" CommandParameter="/" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">/</Button>
        <!-- Row 2 -->
        <Button Grid.Column="0" Grid.Row="2" Command="{Binding AddToDisplayCommand}" CommandParameter="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">4</Button>
        <Button Grid.Column="1" Grid.Row="2" Command="{Binding AddToDisplayCommand}" CommandParameter="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">5</Button>
        <Button Grid.Column="2" Grid.Row="2" Command="{Binding AddToDisplayCommand}" CommandParameter="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">6</Button>
        <Button Grid.Column="3" Grid.Row="2" Command="{Binding AddToDisplayCommand}" CommandParameter="*" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">*</Button>
        <!-- Row 3 -->
        <Button Grid.Column="0" Grid.Row="3" Command="{Binding AddToDisplayCommand}" CommandParameter="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">1</Button>
        <Button Grid.Column="1" Grid.Row="3" Command="{Binding AddToDisplayCommand}" CommandParameter="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">2</Button>
        <Button Grid.Column="2" Grid.Row="3" Command="{Binding AddToDisplayCommand}" CommandParameter="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">3</Button>
        <Button Grid.Column="3" Grid.Row="3" Command="{Binding AddToDisplayCommand}" CommandParameter="-" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">-</Button>
        <!-- Row 4 -->
        <Button Grid.Column="0" Grid.Row="4" Command="{Binding AddToDisplayCommand}" CommandParameter="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">0</Button>
        <Button Grid.Column="1" Grid.Row="4" Command="{Binding ClearCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">C</Button>
        <Button Grid.Column="2" Grid.Row="4" Command="{Binding AddToDisplayCommand}" CommandParameter="+" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">+</Button>
        <Button Grid.Column="3" Grid.Row="4" Command="{Binding CalculateCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="28" FontWeight="Bold">=</Button>
    </Grid>
</Window>
