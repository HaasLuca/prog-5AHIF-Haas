<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:_2025_09_12_Avalonia.ViewModels"
             x:DataType="vm:CalculatorViewModel"
             x:Class="_2025_09_12_Avalonia.Views.CalculatorView">
    
    <UserControl.Styles>
        <Style Selector="Border.calc-card">
            <Setter Property="Background" Value="#2d3748"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="32"/>
            <Setter Property="BoxShadow" Value="0 2 8 0 #00000040"/>
            <Setter Property="Width" Value="450"/>
            <Setter Property="Height" Value="550"/>
        </Style>
        
        <Style Selector="TextBlock.field-label">
            <Setter Property="Foreground" Value="#e2e8f0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
        
        <Style Selector="NumericUpDown.calc-input">
            <Setter Property="Background" Value="#4a5568"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#718096"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="44"/>
        </Style>
        
        <Style Selector="NumericUpDown.calc-input:focus">
            <Setter Property="BorderBrush" Value="#63b3ed"/>
        </Style>
        
        <Style Selector="ComboBox.calc-combo">
            <Setter Property="Background" Value="#4a5568"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#718096"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="44"/>
        </Style>
        
        <Style Selector="ComboBox.calc-combo:focus">
            <Setter Property="BorderBrush" Value="#63b3ed"/>
        </Style>
        
        <Style Selector="Button.calc-button">
            <Setter Property="Background" Value="#4299e1"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="24,16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="52"/>
        </Style>
        
        <Style Selector="Button.calc-button:pointerover">
            <Setter Property="Background" Value="#3182ce"/>
        </Style>
        
        <Style Selector="TextBlock.result-value">
            <Setter Property="Foreground" Value="#68d391"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="#1a202c"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="200"/>
        </Style>
        
        <Style Selector="Border.result-border">
            <Setter Property="BorderBrush" Value="#4a5568"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="MinHeight" Value="54"/>
        </Style>
    </UserControl.Styles>
    
    <Border Classes="calc-card" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid RowDefinitions="40,54,40,54,40,54,20,62,84" ShowGridLines="False">
            
            <TextBlock Grid.Row="0" Classes="field-label" Text="Number 1" VerticalAlignment="Bottom"/>
            <NumericUpDown Grid.Row="1" Classes="calc-input" Value="{Binding FirstNumber}" 
                          HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
            
            <TextBlock Grid.Row="2" Classes="field-label" Text="Number 2" VerticalAlignment="Bottom"/>
            <NumericUpDown Grid.Row="3" Classes="calc-input" Value="{Binding SecondNumber}" 
                          HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
            
            <TextBlock Grid.Row="4" Classes="field-label" Text="Operator" VerticalAlignment="Bottom"/>
            <ComboBox Grid.Row="5" Classes="calc-combo" ItemsSource="{Binding Operators}"
                      SelectedItem="{Binding SelectedOperator}" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
            
            <!-- Spacer row -->
            <Border Grid.Row="6"/>
            
            <Button Grid.Row="7" Classes="calc-button" Content="Calculate"
                    Command="{Binding CalculateCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
            
            <StackPanel Grid.Row="8" VerticalAlignment="Top">
                <TextBlock Classes="field-label" Text="Result" Margin="0,8,0,6"/>
                <Border Classes="result-border" HorizontalAlignment="Stretch">
                    <TextBlock Classes="result-value" Text="{Binding Result}" HorizontalAlignment="Stretch"/>
                </Border>
            </StackPanel>
            
        </Grid>
    </Border>
</UserControl>